<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

<!--    登录-->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

<!--    注册-->
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>controller.RegisterController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

<!--    展示商品种类的页面-->
    <servlet>
        <servlet-name>showKind</servlet-name>
        <servlet-class>controller.ShowKindController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>showKind</servlet-name>
        <url-pattern>/showKind</url-pattern>
    </servlet-mapping>

<!--    获得某类商品的所有物品-->
    <servlet>
        <servlet-name>selectGoods</servlet-name>
        <servlet-class>controller.ShowGoodsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>selectGoods</servlet-name>
        <url-pattern>/selectGoods</url-pattern>
    </servlet-mapping>

    <!--    结账-->
    <servlet>
        <servlet-name>settleAccounts</servlet-name>
        <servlet-class>controller.SettleAccountsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>settleAccounts</servlet-name>
        <url-pattern>/settleAccounts</url-pattern>
    </servlet-mapping>

<!--    保存当前页选中的商品-->
    <servlet>
        <servlet-name>saveGoods</servlet-name>
        <servlet-class>controller.SaveGoodsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>saveGoods</servlet-name>
        <url-pattern>/saveGoods</url-pattern>
    </servlet-mapping>
</web-app>